{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
        <div>
            <h1>{{name}}</h1>
            <ul>
                <li>Age: {{age}}</li>
                <li>Sex: {{gender}}</li>
            </ul>
            <br>
            <hr>
            <div>
                <h3>Adress:</h3>    
            </div>
            <ul>
                {{#with address}}
                    <address>
                    <li>Street: {{street}}</li> 
                        <li>City: {{city}}</li>
                        <li>State: {{state}}</li>
                        <li>Zip: {{zip}}</li>
                        <li>Country: {{country}}</li>
                    </address>
            </ul>
                 {{/with}}
        </div>

        <br>
        <hr>

        <div>
            <h3>Education</h3>
                {{#each education}}
                    <ul>
                        <li>Degree: {{degree}}</li>
                        <li>Major: {{major}}</li>
                        <li>University: {{university}}</li>
                        <li>GraduationYear: {{graduationYear}}</li>
                    </ul>
                {{/each}}
        </div>

        <br>
        <hr>

        <div>
            <h3>Work Experience</h3>
                {{#each workExperience}}
                    <ul>
                        <li>Company: {{company}}</li>
                        <li>Title: {{title}}</li>
                        <li>Date: {{startDate}} to {{endDate}}</li>
                        <li>Responsibilities: {{responsibilities}}</li>
                        <li>year_founded: {{year_founded}}</li>
                        <li>industry: {{industry}}</li>

                        {{#each employees}}
                            <li>Name: {{name}}</li>
                            <li>position: {{position}}</li>
                            <li>department: {{department}}</li>

                           {{#each projects}}
                                    <ul>
                                        <li>{{name}}</li>
                                        <li>{{description}}</li>
                                        <li>{{status}}</li>
                                    </ul>

                                    {{#each teams}}
                                    <ul>
                                        <li>{{team_name}}</li>
                                        <li>{{team_leader.name}}</li>
                                        <li>{{team_leader.title}}</li>
                                        <li>{{team_leader.email}}</li>
                                    </ul>
                                    {{/each}}
                          
                           {{/each}}

                            

                        {{/each}}
                    </ul>
                {{/each}}
        </div>
           
        </div>

    {{/with}}
</div>


