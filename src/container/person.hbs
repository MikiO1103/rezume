{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

{{#with person}}
<div>
    <h1>{{name}}</h1>
    <ul>
        <li>Age: {{age}}</li>
        <li>Sex: {{gender}}</li>
    </ul>
    <br>
    <hr>
    <div>
        <h3>Adress:</h3>
    </div>
    <ul>
        {{#with address}}
        <address>
            <li>Street: {{street}}</li>
            <li>City: {{city}}</li>
            <li>State: {{state}}</li>
            <li>Zip: {{zip}}</li>
            <li>Country: {{country}}</li>
        </address>
        {{/with}}
    </ul>

</div>
{{/with}}

<br>
<hr>
<br>

{{#with person}}
    <div>
        <h3>Education</h3>
        {{#each education}}
        <ul>
            <li>Degree: {{degree}}</li>
            <li>Major: {{major}}</li>
            <li>University: {{university}}</li>
            <li>GraduationYear: {{graduationYear}}</li>
        </ul>
        {{/each}}
    </div>
{{/with}}












{{#with person}}
    <div>
        <h3>Work experience</h3>
    {{#each workExperience}}
        <ul>
            <li>Company: {{company}}</li>
            <li>Title: {{title}}</li>
            <li>Date: {{startDate}} to {{endDate}}</li>

            <li>
                {{#each responsibilities}}
                <p>{{this}}</p>
                {{/each}}
            </li>
            

            <li>year_founded: {{year_founded}}</li>
            <li>industry: {{industry}}</li> 

            {{#each employees}}
                <li>{{name}} </li>
                <li>{{position}}</li>
                <li>{{department}}</li> 

                    {{#each projects}}
                    <li>{{name}}</li>
                    <li>{{description}}</li>
                    <li>{{status}}</li>

                        {{#each teams}}
                        <li>{{team_name}}</li>
                                <br>
                            {{#with team_leader}}
                                <li>{{name}}</li>
                                <li>{{title}}</li>
                                <li>{{email}}</li>
                            {{/with}}
                                <br>
                            {{#each team_members}}
                                    <li>{{name}}</li>
                                    <li>{{title}}</li>
                                    <li>{{email}}</li>
                                    <br>

                                    {{#each projects}}
                                        {{name}}
                                        {{description}}

                                        {{#each technologies}}
                                         <P>{{this}}</P>
                                        {{/each}}

                                        {{#each team_members}}
                                            {{name}}
                                            {{title}}
                                        {{/each}}

                                    {{/each}}
                            {{/each}}

                        {{/each}}

                       

                    {{/each}}

            {{/each}}

            
                        
        </ul>
    {{/each}}
    </div>
{{/with}}




