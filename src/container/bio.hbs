{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1>{{name}}</h1>
    <p>birthdate: {{birthdate}}</p>
    <p>birthplace: {{birthplace}}</p>
    <p>deathdate: {{deathdate}}</p>
    <p>deathplace: {{deathplace}}</p>
    <p>nationality: {{nationality}}</p>
    <p>occupation: {{occupation}}</p>
</div>

<br>
<hr>

<div>
    <h3>known_for:</h3>
        {{#each known_for}}
            <p>{{this}}</p>
        {{/each}}
</div>

<br>
<hr>

<div>
    <h3>education:</h3>
        {{#each education}}
            <P>degree:{{degree}}</P>
            <p>field: {{field}}</p>
            <p>institution: {{institution}}</p>
            <p>year: {{year}}</p>
       {{/each}}
</div>

<br>
<hr>

<div>
    <h3>notable_publications:</h3>
    {{#each notable_publications}}
        <p>title: {{title}}</p>
        <p>year: {{year}}</p>
        <p>publisher: {{publisher}}</p>
        <br>
        <p>title: {{title}}</p>
        <p>year: {{year}}</p>
        <p>publisher: {{publisher}}</p>
    {{/each}}
</div>

<br>
<hr>

<div>
    <h3>partners:</h3>
    {{#each partners}}
        <p>name: {{name}}</p>
        <p>relationship: {{relationship}}</p>
        <p>years: {{years}}</p>
        <br>
        <p>name: {{name}}</p>
        <p>relationship: {{relationship}}</p>
        <p>years: {{years}}</p>
    {{/each}}
</div>

<br>
<hr>

<div>
    <h3>awards:</h3>
    {{#each awards}}
        <p>title: {{title}}</p>
        <p>year: {{year}}</p>
        <p>description: {{description}}</p>
    {{/each}}
</div>


<br>
<hr>

<div>
    <h3>influences:</h3>
    {{#each influences}}
        <p>{{this}}</p>
    {{/each}}
</div>

<div>
    <h3>influenced:</h3>
    {{#each influenced}}
    <p>{{this}}</p>
    {{/each}}
</div>

<br>
<hr>

<div>
    <h3>quotes:</h3>
    {{#each quotes}}
    <p>{{this}}</p>
    {{/each}}
</div>

<br>
<hr>

<div>
    <h3>major_discoveries:</h3>
    {{#each major_discoveries}}
    <p>title: {{title}}</p>
    <p>year: {{year}}</p>
    <p>description: {{description}}</p>
    {{/each}}
</div>

<br><hr>

<div>
    {{#each contributions}}
    <p>title: {{title}}</p>
    <p>descripti: {{description}}</p>
    <p>{{year}}</p>
    <p>{{field}}</p>
    {{/each}}
</div>



